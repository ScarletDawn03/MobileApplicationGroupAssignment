<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplicationTheme"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">


        <activity
            android:name=".CompleteProfileActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="true" />

        <activity
            android:name=".myUpload"
            android:exported="false" />
        <activity
            android:name=".uploadPassyear"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Added CourseSearchActivity -->
        <activity
            android:name=".CourseSearchActivity"
            android:exported="false" />

        <activity
            android:name=".NotificationsActivity"
            android:exported="false" />

        <!-- Added Profile Module -->
        <activity
            android:name=".MainProfile"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".ProfileActivity"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".AppThemeSettings"
            android:theme="@style/Theme.MyApplication"/>


        <activity android:name=".NotificationPreferences"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".PrivacySettings"
            android:theme="@style/Theme.MyApplication"/>

        <activity android:name=".AchievementActivity"
            android:theme="@style/Theme.MyApplication"/>


    </application>

</manifest>
